extends layout

block body
  div.container(ng-controller='AppCtrl')
    nav.navbar.navbar-default(role='navigation')
      div.navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#collapsed-nav')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
      div.collapse.navbar-collapse#collapsed-nav
        ul.nav.navbar-nav
          li(ng-class="{active: isActive('/home')}")
            a(href='home') Home
          li(ng-class="{active: isActive('/overview')}")
            a(href='overview') Overview
          li(ng-class="{active: isActive('/angularjs')}")
            a(href='angularjs') AngularJS
          li(ng-class="{active: isActive('/demo')}")
            a(href='demo') AngularJS + AngularFire
          li(ng-class="{active: isActive('/more-demo')}")
            a(href='more-demo') More Demo
          li(ng-class="{active: isActive('/forge')}")
            a(href='forge') Forge
          li(ng-class="{active: isActive('/end')}")
            a(href='end') The End

    div(ng-view)

    div.pull-right(style="font-size: 90%; color: #AAA; text-align: right;") 
      div 11-12-2013
      div AngularJS Meetup
      div Honey Darling

  script(src='js/lib/angular/1.2.0-rc.3/angular.min.js')
  script(src='js/lib/angular/1.2.0-rc.3/angular-route.min.js')
  script(src='//cdn.firebase.com/v0/firebase.js')
  script(src='//cdn.firebase.com/libs/angularfire/0.3.0/angularfire.js')
  script(src='js/app.js')
  script(src='http://google-code-prettify.googlecode.com/svn/trunk/src/prettify.js')